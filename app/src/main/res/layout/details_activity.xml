<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/parentLayout12"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <!-- Left corner ImageView -->
        <ImageView
            android:id="@+id/leftImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_arrow_back_ios_24" />

        <!-- Right corner Images -->
        <RelativeLayout
            android:id="@+id/rightLayout12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/rightImageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/baseline_more_vert_24" />

            <ImageView
                android:id="@+id/rightImageView2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toStartOf="@id/rightImageView1"
                android:src="@drawable/belll" />
        </RelativeLayout>
    </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/parentLayout12"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            app:cardElevation="0dp">

            <!-- ImageView for the background image -->
            <ImageView
                android:id="@+id/backgroundImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/shipp"
                android:scaleType="centerCrop" />

            <!-- ImageView for the icon (top right corner) -->
            <ImageView
                android:id="@+id/iconImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/saveunslect"
                android:layout_alignParentTop="true"
               android:layout_marginStart="300dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:padding="8dp"
                 />
        </androidx.cardview.widget.CardView>

        <RelativeLayout
        android:id="@+id/parentLayout"
        android:layout_below="@+id/cardView"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Left corner TextViews -->
        <RelativeLayout
            android:id="@+id/leftLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/NametextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView 1" />

            <TextView
                android:id="@+id/LocationtextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/NametextView1"
                android:drawableStart="@drawable/baseline_location_on_242222"
android:layout_marginTop="10dp"
                android:text="TextView 2" />
            <TextView
                android:id="@+id/PricetextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView 3"
                android:layout_marginTop="10dp"
                android:padding="5dp"

                android:layout_below="@+id/LocationtextView2"
                android:textColor="@color/white"
                android:background="@drawable/rounded_rectangle_background"
                android:drawableStart="@drawable/rupeesymbol"
                android:elevation="8dp"
                />
        </RelativeLayout>

        <!-- Right corner ImageView and TextView -->
        <RelativeLayout
            android:id="@+id/rightLayout"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/rightImageView"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"

                android:src="@drawable/thermometer" />

            <TextView
                android:id="@+id/rightTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/rightImageView"
android:textSize="20dp"
                android:text="Temp"
                android:textAlignment="viewEnd" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/first1111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parentLayout"
        android:padding="6dp">

        <TextView
            android:id="@+id/ikikikxx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Service"
            android:textColor="@color/black"
            android:textSize="25sp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first1111"
        android:id="@+id/jjjjjjj"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="0dp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/sun"
            android:layout_weight="1"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:padding="10dp"

            android:layout_height="wrap_content"
            android:src="@drawable/areoplanewhite"
            android:layout_weight="1"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:padding="10dp"

            android:layout_height="wrap_content"
            android:src="@drawable/boattt"
            android:layout_weight="1"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:padding="10dp"

            android:layout_height="wrap_content"
            android:src="@drawable/busss"
            android:layout_weight="1"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="0dp"
            android:padding="10dp"

            android:layout_height="wrap_content"
            android:src="@drawable/bike"
            android:layout_weight="1"
            android:adjustViewBounds="true"/>
    </LinearLayout>

        <RelativeLayout
            android:id="@+id/first1111sssdds"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/jjjjjjj"
            android:padding="6dp">

            <TextView
                android:id="@+id/Informationtextview"
                android:layout_width="374dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Information"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/servicetextview"
                android:layout_width="374dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Informationtextview"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Service"
                android:textColor="@color/black"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/servicetextview22"
                android:layout_width="374dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/servicetextview"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:text="No of Pepole"
                android:textColor="@color/black"
                android:textSize="25sp" />

        </RelativeLayout>

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/first1111sssdds"
            android:layout_marginTop="8dp"
            android:scrollbars="none"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_margin="0dp">

            <TextView
                android:id="@+id/text1"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="1"
                android:textSize="20sp"
                android:textColor="@color/black"

                android:gravity="center"
                android:layout_marginStart="16dp"
                android:background="@drawable/selected_backround"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="2"
                android:textSize="20sp"
                android:textColor="@color/black"

                android:gravity="center"

                android:background="@drawable/selected_backround"
                android:layout_marginStart="16dp"/>
            <TextView
                android:id="@+id/text3"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="3"
                android:textSize="20sp"
                android:textColor="@color/black"

                android:gravity="center"

                android:background="@drawable/selected_backround"
                android:layout_marginStart="16dp"/>
            <TextView
                android:id="@+id/text4"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="10"
                android:textSize="20sp"
                android:textColor="@color/black"

                android:gravity="center"

                android:background="@drawable/selected_backround"
                android:layout_marginStart="16dp"/><!-- Add margin between the two TextViews -->

        </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/proceed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scroll"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#FF5F1F"
            android:text="Proceed To Payment" />

</RelativeLayout>
</ScrollView>