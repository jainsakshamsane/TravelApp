<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <!-- Heading TextView -->
    <TextView
        android:id="@+id/headingTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        />

    <!-- Left Icon -->
    <ImageView
        android:id="@+id/leftIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_chevron_left_24"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:id="@+id/linear2"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/price22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:padding="5dp"
                android:text="Price:"

                android:textSize="18dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/price222"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"

                android:text="Rs"
                android:textColor="#848884"
                android:textSize="18dp"
                android:textStyle="bold" />
        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="3dp"
            android:text="Price"
            android:textColor="#848884"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="GST:"

                android:textSize="18dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#848884"
                android:text="Rs"

                android:textSize="18dp"
                android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="3dp"
            android:text="0.0"
            android:textColor="#848884"
            android:textSize="18dp"
            android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/totalprice22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="Total price :"

                android:textSize="18dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/totalprice222"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#848884"
                android:text="Rs"

                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
            android:id="@+id/totalprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="3dp"
            android:text="Total price"
            android:textColor="#848884"
            android:textSize="18dp"
            android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            android:text="Enter Card Details"
            android:textColor="@color/black"
            android:textSize="18dp"

            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="Card Number"
            android:textColor="#848884"
            android:textSize="18dp"

            android:textStyle="bold" />
        <EditText
            android:id="@+id/card_number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/rectangle_signup"
            android:padding="5dp"
            android:paddingLeft="0dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:inputType="number" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/expire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Exp Date"
                android:textColor="#848884"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:padding="5dp"
                android:text="CCV"


                android:textColor="#848884"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/exparedate"
                android:layout_width="0dp"
                android:layout_height="50dp"

                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/rectangle_signup"
                android:hint="MM/YY"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="18sp"
              />

            <EditText
                android:id="@+id/cvv"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="@drawable/rectangle_signup"
                android:gravity="center"
                android:hint="888"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:inputType="number"/>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            android:text="Country"
            android:textColor="#848884"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/country"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/rectangle_signup"
            android:padding="5dp"
            android:paddingLeft="0dp"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/proceed"

            android:textColor="@color/white"
            android:layout_marginTop="50dp"
            android:background="@drawable/signup_button"
            android:textSize="18dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textAlignment="center"
            android:text="Confirm Payment"/>
    </LinearLayout>


</RelativeLayout>
</ScrollView>