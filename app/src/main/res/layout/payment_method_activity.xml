<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <!-- Heading TextView -->
    <TextView
        android:id="@+id/headingTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment"
        android:layout_alignParentTop="true"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
       android:layout_marginTop="10dp"
        />

    <!-- Left Icon -->
    <ImageView
        android:id="@+id/leftIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_chevron_left_24"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:id="@+id/linear2"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/authorrr"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"/>


            <RelativeLayout
                android:id="@+id/middleLayout"
                android:layout_width="226dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"

                android:layout_marginEnd="62dp"
                android:layout_toStartOf="@+id/rightLayout"
                android:layout_toEndOf="@id/leftImageView">

                <TextView
                    android:id="@+id/placename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                   android:layout_marginStart="1dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="-5dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:id="@+id/price22"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:padding="5dp"
                            android:text="Price:"

                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:drawableStart="@drawable/rupeeindianone"
                            android:layout_marginStart="3dp"
                            android:text="Price"
                            android:textColor="#848884"
                            android:textSize="16dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            android:text="GST:"

                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="3dp"
                            android:drawableStart="@drawable/rupeeindianone"
                            android:text="0.0"
                            android:textColor="#848884"
                            android:textSize="16dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/totalprice22"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            android:text="Total price :"

                            android:textSize="16dp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/totalprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TextView 3"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:background="@drawable/rounded_bordertextorange"
                            android:drawableStart="@drawable/rupeesymbol"
                            android:elevation="18dp"

                            android:padding="5dp"/>
                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>

            <!-- Right Part -->
            <RelativeLayout
                android:id="@+id/rightLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true">



<!--                <TextView-->
<!--                    android:id="@+id/timetextview"-->
<!--                    android:layout_width="100dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Time"-->
<!--                    android:textColor="@color/black"-->
<!--                    android:textSize="14sp"/>-->


            </RelativeLayout>
            <View
                android:id="@+id/dividerView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/rightLayout"
                android:background="#D3D3D3"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            android:text="Enter Card Details"
            android:textColor="@color/black"
            android:textSize="18dp"

            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="Card Number"
            android:textColor="#848884"
            android:textSize="18dp"

            android:textStyle="bold" />
        <EditText
            android:id="@+id/card_number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/rectangle_signup"
            android:padding="5dp"
            android:paddingLeft="0dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:inputType="number" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/expire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Exp Date"
                android:textColor="#848884"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:padding="5dp"
                android:text="CCV"


                android:textColor="#848884"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/exparedate"
                android:layout_width="0dp"
                android:layout_height="50dp"

                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/rectangle_signup"
                android:hint="MM/YY"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="18sp"
              />

            <EditText
                android:id="@+id/cvv"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="@drawable/rectangle_signup"
                android:gravity="center"
                android:hint="888"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:inputType="number"/>

        </LinearLayout>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/proceed"

            android:textColor="@color/white"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_bordertextorange"
            android:textSize="18dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textAlignment="center"
            android:text="Confirm Payment"/>
    </LinearLayout>


</RelativeLayout>
</ScrollView>