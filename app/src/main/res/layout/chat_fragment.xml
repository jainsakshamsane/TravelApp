<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:padding="16dp"

        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/userimage"

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/authorrr"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat"
                    android:layout_marginLeft="90dp"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

            </LinearLayout>

        </LinearLayout>

        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/belll"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first"
        android:layout_marginTop="0dp"
        android:id="@+id/relativeLayoutWithSearch">

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            android:padding="15dp">

            <EditText
                android:id="@+id/searchtext"
                android:layout_width="183dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:contentDescription="Search Bar"
                android:hint="Search For Recipies"
                android:padding="13dp"
                android:background="@drawable/rectangle_background"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/searchButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/searchhhh"
                android:layout_marginStart="10dp"
                android:contentDescription="Search Button" />

        </LinearLayout>



    </RelativeLayout>




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ChatsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relativeLayoutWithSearch"
        android:layout_marginTop="16dp"
        />

</RelativeLayout>