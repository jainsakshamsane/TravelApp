<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Add your ImageView and TextView here -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/back"
                android:layout_gravity="center"
                android:src="@drawable/baseline_chevron_left_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Settings"
                android:layout_marginLeft="90dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear01"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:background="@drawable/rectangle_settings"
            android:layout_below="@+id/linear1"
            android:layout_height="90dp"
            android:orientation="horizontal">

            <!-- Add your ImageView and TextView here -->
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:id="@+id/profilephoto"
                android:src="@drawable/bgggg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Name"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/name"
                android:textSize="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Email id"
                android:id="@+id/email"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="-130dp"
                android:textColor="#6F8077"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="60dp"
                android:src="@drawable/baseline_keyboard_arrow_right_24" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear01"
            android:layout_marginTop="50dp"
            android:background="@drawable/rectangle_settings"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="0dp"
                android:text="preference"
                android:gravity="bottom"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear4"
            android:background="@drawable/rectangle_settings1"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_marginLeft="0dp"
                android:layout_gravity="center"
                android:layout_height="20dp"
                android:src="@drawable/baseline_notifications_2410" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#6F8077"
                android:text="Notification"
                android:textStyle="bold"
                android:textSize="17dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_marginLeft="167dp"
                android:layout_gravity="center"
                android:layout_height="20dp"
                android:src="@drawable/baseline_keyboard_arrow_right_24" />

        </LinearLayout>

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/view1"
            android:layout_below="@id/linear5"
            android:background="#B2BEB5" />

        <LinearLayout
            android:id="@+id/linear6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view1"
            android:background="@drawable/rectangle_settings1"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_marginLeft="0dp"
                android:layout_gravity="center"
                android:layout_height="20dp"
                android:src="@drawable/baseline_language_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#6F8077"
                android:text="Language"
                android:textStyle="bold"
                android:textSize="17dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_marginLeft="181dp"
                android:layout_gravity="center"
                android:layout_height="20dp"
                android:src="@drawable/baseline_keyboard_arrow_right_24" />

        </LinearLayout>

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/view2"
            android:layout_below="@id/linear6"
            android:background="#B2BEB5" />

        <LinearLayout
            android:id="@+id/linear7"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/view2"
            android:background="@drawable/rectangle_settings"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_marginLeft="0dp"
                android:layout_height="20dp"
                android:src="@drawable/baseline_tour_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#6F8077"
                android:text="Upcoming Tour"
                android:textStyle="bold"
                android:textSize="17dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_marginLeft="137dp"
                android:layout_height="20dp"
                android:src="@drawable/baseline_keyboard_arrow_right_24" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear7"
            android:layout_marginTop="50dp"
            android:background="@drawable/rectangle_settings"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="0dp"
                android:text="Banking &amp; Payment"
                android:gravity="bottom"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear8"
            android:background="@drawable/rectangle_settings"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_marginLeft="0dp"
                android:layout_gravity="center"
                android:layout_height="20dp"
                android:src="@drawable/baseline_payment_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#6F8077"
                android:text="Payment Method"
                android:textStyle="bold"
                android:textSize="17dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_marginLeft="125dp"
                android:layout_gravity="center"
                android:layout_height="20dp"
                android:src="@drawable/baseline_keyboard_arrow_right_24" />

        </LinearLayout>

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/view3"
            android:layout_below="@id/linear9"
            android:background="#B2BEB5" />

        <LinearLayout
            android:id="@+id/linear10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view3"
            android:background="@drawable/rectangle_settings"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_marginLeft="0dp"
                android:layout_gravity="center"
                android:layout_height="20dp"
                android:src="@drawable/baseline_privacy_tip_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#6F8077"
                android:text="Privacy Policy"
                android:textStyle="bold"
                android:textSize="17dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_marginLeft="145dp"
                android:layout_gravity="center"
                android:layout_height="20dp"
                android:src="@drawable/baseline_keyboard_arrow_right_24" />

        </LinearLayout>

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/view4"
            android:layout_below="@id/linear10"
            android:background="#B2BEB5" />

        <LinearLayout
            android:id="@+id/linear11"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/view4"
            android:background="@drawable/rectangle_settings"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_marginLeft="0dp"
                android:layout_height="20dp"
                android:src="@drawable/baseline_request_quote_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#6F8077"
                android:text="Terms of Use"
                android:textStyle="bold"
                android:textSize="17dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_marginLeft="152dp"
                android:layout_height="20dp"
                android:src="@drawable/baseline_keyboard_arrow_right_24" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/firstLinearLayout"
            android:layout_width="match_parent"
            android:layout_below="@+id/linear11"
            android:layout_marginTop="50dp"
            android:background="@drawable/upload_image"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_marginLeft="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_logout_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="-100dp"
                android:id="@+id/logout"
                android:text="Logout"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
