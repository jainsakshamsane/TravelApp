<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/rounded_bordertextwhole"
android:layout_margin="10dp"
    android:id="@+id/Totallayout"
    android:layout_height="wrap_content"
    >

    <!-- First part: ImageView -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"

        android:src="@drawable/shipp"


     />

    <!-- Second part: Nested RelativeLayout for TextViews -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageView"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp">

        <!-- Two TextViews vertically -->
        <TextView
            android:id="@+id/NameTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView 1"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/LocationTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView 2"
            android:textSize="15dp"
            android:drawableStart="@drawable/baseline_location_on_24"
            android:textColor="#dddddd"
            android:layout_below="@id/NameTextview"
            android:layout_marginTop="8dp"/>

        <!-- Two more TextViews horizontally -->
        <TextView
            android:id="@+id/NoofdaysTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/LocationTextview"
            android:layout_marginTop="16dp"

            android:padding="10dp"
            android:background="@drawable/rounded_bordertext"
            android:text="TextView 3"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/SeasonTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView 4"
            android:background="@drawable/rounded_bordertext"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:padding="5dp"

            android:layout_toEndOf="@id/NoofdaysTextview"
            android:layout_alignBaseline="@id/NoofdaysTextview"
            android:layout_marginStart="8dp"/>
    </RelativeLayout>

    <!-- Third part: One TextView -->
    <TextView
        android:id="@+id/PriceTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:padding="5dp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_rectangle_background"
        android:drawableStart="@drawable/rupeesymbol"
        android:layout_marginTop="46dp"
        android:layout_toEndOf="@id/imageView"
        android:text="TextView 5" />
</RelativeLayout>
