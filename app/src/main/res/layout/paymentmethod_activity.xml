<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Add your ImageView and TextView here -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/back"
                android:layout_gravity="center"
                android:src="@drawable/baseline_chevron_left_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Payment Ka Method"
                android:layout_marginLeft="55dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="25dp" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="wrap_content"
            android:layout_height="270dp"
            android:layout_below="@+id/linear1"
            android:layout_marginTop="20dp"
            />

        <LinearLayout
            android:id="@+id/linear01"
            android:layout_width="match_parent"
            android:layout_below="@+id/recyclerView"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:background="@drawable/rectangle_card"
            android:orientation="vertical">

            <!-- Add your ImageView and TextView here -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:src="@drawable/atmcard" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Oops! No Cards Found!!"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:gravity="center"
                android:textStyle="italic"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="420dp"
            android:layout_below="@id/linear01"
            android:layout_height="150dp"
            android:gravity="center"
            android:background="@drawable/rectangle_card"
            android:orientation="horizontal"
            android:layout_marginTop="30dp" >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/piee"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Money Transfer Limit"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:paddingLeft="40dp"
                android:textColorHint="@color/black"
                android:layout_marginTop="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="â‚¹12 000 of 25 000"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:paddingLeft="40dp"
                android:layout_marginLeft="-180dp"
                android:textColorHint="@color/black"
                android:layout_marginTop="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear4"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/layout3" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="History"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25dp" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView12"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/linear4"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="0dp"
            />

        <LinearLayout
            android:id="@+id/linear5"
            android:layout_width="match_parent"
            android:layout_below="@+id/recyclerView12"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:background="@drawable/rectangle_card"
            android:orientation="vertical">

            <!-- Add your ImageView and TextView here -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:src="@drawable/plane" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Oops! No Travel History Found!!"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:gravity="center"
                android:textStyle="italic"
                android:textSize="20dp" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>
