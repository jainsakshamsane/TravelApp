<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!-- First TextView at the top -->
        <TextView
            android:id="@+id/textViewHeading1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discover In"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            />

        <!-- Second TextView below the first -->
        <TextView
            android:id="@+id/place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heading 2"
            android:textSize="24sp"
            android:layout_marginStart="8dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first11"
        android:layout_marginTop="0dp"
        android:id="@+id/relativeLayoutWithSearch">

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            android:padding="15dp">

            <EditText
                android:id="@+id/searchtext"
                android:layout_width="183dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:contentDescription="Search Bar"
                android:hint="Search For Recipies"
                android:padding="13dp"
                android:background="@drawable/rectangle_background"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/searchButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/searchhhh"
                android:layout_marginStart="10dp"
                android:contentDescription="Search Button" />

        </LinearLayout>



    </RelativeLayout>

    <!-- RecyclerView below the TextViews -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>
