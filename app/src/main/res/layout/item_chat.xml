<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/specifiedperson"
    android:padding="16dp">

    <ImageView
        android:id="@+id/leftImageView"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/authorrr"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>


    <RelativeLayout
        android:id="@+id/middleLayout"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="62dp"
        android:layout_toStartOf="@+id/rightLayout"
        android:layout_toEndOf="@id/leftImageView">

        <TextView
            android:id="@+id/topTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bottomTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topTextView"
            android:text="Last Message"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </RelativeLayout>

    <!-- Right Part -->
    <RelativeLayout
        android:id="@+id/rightLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true">



        <TextView
            android:id="@+id/timetextview"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textColor="@color/black"
            android:textSize="14sp"/>


    </RelativeLayout>
    <View
        android:id="@+id/dividerView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rightLayout"
        android:background="#D3D3D3"
        android:layout_marginTop="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>

