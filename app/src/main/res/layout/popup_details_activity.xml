<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/parentLayout12"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <!-- Left corner ImageView -->
        <ImageView
            android:id="@+id/leftImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_arrow_back_ios_24" />

        <!-- Right corner Images -->
        <RelativeLayout
            android:id="@+id/rightLayout12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/rightImageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/baseline_more_vert_24" />

            <ImageView
                android:id="@+id/rightImageView2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toStartOf="@id/rightImageView1"
                android:src="@drawable/belll" />
        </RelativeLayout>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/parentLayout12"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"> <!-- Set elevation to 0dp to prevent shadow -->

        <!-- ImageView for the background image -->
        <ImageView
            android:id="@+id/backgroundImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/shipp"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:id="@+id/parentLayout"
        android:layout_below="@+id/cardView"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Left corner TextViews -->
        <RelativeLayout
            android:id="@+id/leftLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/NametextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView 1" />

            <TextView
                android:id="@+id/LocationtextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/NametextView1"
                android:drawableStart="@drawable/baseline_location_on_242222"

                android:text="TextView 2" />
            <TextView
                android:id="@+id/PricetextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView 3"
                android:layout_below="@+id/LocationtextView2"
                android:textColor="@color/white"
                android:background="#FF5F1F"
                android:drawableStart="@drawable/rupeesymbol"
                android:elevation="8dp"
                />
        </RelativeLayout>

        <!-- Right corner ImageView and TextView -->
        <RelativeLayout
            android:id="@+id/rightLayout"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/rightImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toStartOf="@id/rightTextView"
                android:src="@drawable/authorrr" />

            <TextView
                android:id="@+id/rightTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"

                android:text="Right Text"
                android:textAlignment="viewEnd" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/first1111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parentLayout"
        android:padding="6dp">

        <TextView
            android:id="@+id/ikikikxx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Service"
            android:textColor="@color/black"
            android:textSize="25sp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first1111"
        android:id="@+id/jjjjjjj"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="0dp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/sun"
            android:layout_weight="1"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:padding="10dp"

            android:layout_height="wrap_content"
            android:src="@drawable/areoplanewhite"
            android:layout_weight="1"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:padding="10dp"

            android:layout_height="wrap_content"
            android:src="@drawable/boattt"
            android:layout_weight="1"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:padding="10dp"

            android:layout_height="wrap_content"
            android:src="@drawable/busss"
            android:layout_weight="1"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="0dp"
            android:padding="10dp"

            android:layout_height="wrap_content"
            android:src="@drawable/bike"
            android:layout_weight="1"
            android:adjustViewBounds="true"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/first1111sssdds"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/jjjjjjj"
        android:padding="6dp">

        <TextView
            android:id="@+id/Informationtextview"
            android:layout_width="379dp"
            android:layout_height="213dp"
            android:layout_marginLeft="10dp"
            android:text="Information"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>


</RelativeLayout>