<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:padding="16dp"

            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layout0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/userimage"

                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/authorrr"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="10dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Map"
                        android:layout_marginLeft="90dp"
                        android:textColor="@color/black"
                        android:textSize="30sp" />

                </LinearLayout>

            </LinearLayout>

            <ImageView

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/belll"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/first"
            android:layout_marginTop="0dp"
            android:id="@+id/relativeLayoutWithSearch">

            <LinearLayout
                android:id="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentStart="true"
                android:padding="15dp">

                <EditText
                    android:id="@+id/searchtext"
                    android:layout_width="183dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:contentDescription="Search Bar"
                    android:hint="Search For Recipies"
                    android:padding="13dp"
                    android:background="@drawable/rectangle_background"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/searchButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/searchhhh"
                    android:layout_marginStart="10dp"
                    android:contentDescription="Search Button" />

            </LinearLayout>



        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/first1111"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayoutWithSearch"
            android:padding="6dp">

            <TextView
                android:id="@+id/ikikikxx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="My Location"
                android:textColor="@color/black"
                android:textSize="25sp" />
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView12"
            android:layout_width="wrap_content"
            android:layout_height="134dp"
            android:layout_below="@+id/first1111"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="0dp"
            />
        <TextView
            android:id="@+id/noPlacesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/first1111"
            android:layout_gravity="center"
            android:layout_marginTop="54dp"
            android:text="Oops! No places found for your location."
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginStart="40dp"
            android:visibility="gone" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/recyclerView12">
            <TextView
                android:id="@+id/ikikikxx2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Save Location"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="25sp" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView123"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ikikikxx2"
               android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"



                />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>